<!-- Validation failure messages -->

<% if @item.errors.any? %>
  <% @item.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Add Item</h3>
      </div>
      <div class="panel-body">
        <form action="/create_item" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for purchase_id -->
          <div class="form-group">
            <label for="purchase_id" class="col-sm-2 control-label">
              Purchase
            </label>
            <div class="col-sm-10">
            <%= select_tag(:purchase_id, options_from_collection_for_select(Purchase.all, :id, :id), :class => "form-control") %>
            

            <!--  <input type="text" id="purchase_id" name="purchase_id" placeholder="Purchase" class="form-control" value="<%= @item.purchase_id %>">
            </div>-->
          </div>

          <!-- Label and input for item -->
          <div class="form-group">
            <label for="item" class="col-sm-2 control-label">
              Item
            </label>
            <div class="col-sm-10">
              
              <input type="text" id="item" name="item" placeholder="Item" class="form-control" value="<%= @item.item %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-success">
                Create Item
              </button>
              or
              <a href="/items">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
